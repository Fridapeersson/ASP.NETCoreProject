@{
    ViewData["Title"] = "Error";
}

@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var imgPath = themeMode == "dark" ? "./images/home/error/404_dark.svg" : "./images/home/error/404.svg";
}

<section class="error-page">
        <div class="container">
            <div class="content">
                <img src=@imgPath />
                <h1>Woopsie</h1>
                <p>The page you are looking for doesn't exist</p>
            </div>
            <nav>
                <a class="btn-theme" asp-action="Index" asp-controller="Home"><i class="fa-light fa-house"></i>Go back to homepage</a>
            </nav>
        </div>
</section>