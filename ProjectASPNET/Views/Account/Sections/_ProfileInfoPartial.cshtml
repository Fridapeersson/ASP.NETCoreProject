@model ProfileInfoViewModel

    <aside>
        <div class="profile-info">
            <div class="img-container">

                @if (Model.ProfileImgUrl != null)
                {
                    <img src="~/uploads/@Model.ProfileImgUrl" class="profile-img" />
                    <form enctype="multipart/form-data" method="POST" asp-action="UploadImage" asp-controller="Account">
                        <input id="uploadFile" type="file" name="file" hidden />
                        <label for="uploadFile" class="btn-circle"><i class="fa-regular fa-refresh"></i></label>
                    </form>
                }
                else
                {
                    <img src="~/uploads/no-profile-img.png" alt="Default img" )´s profile picture" class="no-profile-img" />

                    <form enctype="multipart/form-data" method="POST" asp-action="UploadImage" asp-controller="Account">
                        <input id="uploadFile" type="file" name="file" hidden />
                        <label for="uploadFile" class="btn btn-circle btn-circle-sm"><i class="fa-regular fa-refresh"></i></label>
                    </form>
                }
            </div>

            <h5>@Model.FirstName @Model.LastName</h5>
            <p>@Model.Email</p>

            <nav>
                <a id="account-details-btn"
                   class="@(ViewBag.ActiveMenu == "Details" ? "btn-theme-s" : "btn-transparent")"
                   asp-controller="Account"
                   asp-action="Details">
                    <i class="fa-solid fa-gear"></i>Account Details
                </a>

                <a id="security-btn"
                   class="@(ViewBag.ActiveMenu == "Security" ? "btn-theme-s" : "btn-transparent")"
                   asp-controller="Account"
                   asp-action="Security">
                    <i class="fa-regular fa-lock"></i>Security
                </a>

                <a id="saved-courses-btn"
                   class="@(ViewBag.ActiveMenu == "SavedCourses" ? "btn-theme-s" : "btn-transparent")"
                   asp-controller="Account"
                   asp-action="SavedCourses">
                    <i class="fa-regular fa-bookmark"></i>Saved Courses
                </a>

                <a id="sign-out-btn"
                   class="@(ViewBag.ActiveMenu == "SignOut" ? "btn-theme-s" : "btn-transparent")"
                   asp-controller="Auth"
                   asp-action="SignOut">
                    <i class="fa-solid fa-arrow-right-from-bracket rotate"></i>Sign out
                </a>
            </nav>
        </div>
    </aside>