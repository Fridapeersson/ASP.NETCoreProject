@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";

}


<!DOCTYPE html>
<html lang="en" class="@themeMode">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @if (!string.IsNullOrWhiteSpace(ViewData["Title"]?.ToString()))
    {
        <title>@ViewData["Title"] - Silicon</title>
    }
    else
    {
        <title>Silicon</title>
    }

    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    
    <script defer src="~/js/site.js"></script>
    @* <script defer src="~/js/validation.js"></script> *@


    <title>@ViewData["Title"] - Silicon</title>

</head>

<body>

    <div class="wrapper">
        @await Html.PartialAsync("~/Views/Sections/_HeaderPartial.cshtml")

        <main>
            @RenderBody()
        </main>

        @await Html.PartialAsync("~/Views/Sections/_FooterPartial.cshtml")
    </div>

</body>
</html>